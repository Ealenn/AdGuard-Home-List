root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Matches multiple files with brace expansion notation
[*.{ts,js,json,sh,md}]
[Dockerfile]
charset = utf-8
indent_style = space
indent_size = 2

# Makefile
[Makefile]
indent_style = tab
